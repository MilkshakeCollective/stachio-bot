{
	"exclude": ["node_modules"],
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2023"],
		"module": "ES2022",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"importHelpers": true,
		"pretty": true,
		"noEmitOnError": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": false,
		"strictNullChecks": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@milkshakecollective/helper": ["packages/helper/src/index.ts"],
			"@milkshakecollective/bot": ["packages/bot/src/index.ts"]
		}
	},
	"references": [{ "path": "packages/helper" }, { "path": "packages/bot" }, { "path": "packages/import" }]
}
